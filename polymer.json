{
  "entrypoint": "index.html",
  "builds": [
    {
      "preset": "es6-bundled",
      "basePath": "/anwesenheit/",
      "js": {
        "compile": {
          "exclude": ["node_modules/**/*"]
        },
        "minify": {
          "exclude": ["node_modules/**/*"]
        }
      }
    }
  ],
  "sources": [
    "manifest.json",
    "src/**/*",
    "images/**/*",
    "styles/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "node_modules/particlesjs/dist/**/*"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}